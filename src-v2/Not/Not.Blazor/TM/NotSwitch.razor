@using Not.Blazor.Components

@inherits BindableValueComponent<bool>

<MudSwitch T="bool" @bind-Value="Value" Label="@Localizer.Get(Label)"
           ThumbIcon="@(Value==true ? IconForTrue : IconForFalse )"
           ThumbIconColor="@(Value==true ? ColorForTrue : ColorForFalse )" />

@code {
    [Parameter]
    public string Label { get; set; } = default!;
    [Parameter]
    public string IconForTrue { get; set; } = Icons.Material.Filled.Done;
    [Parameter]
    public string IconForFalse { get; set; } = Icons.Material.Filled.Close;
    [Parameter]
    public Color ColorForTrue { get; set; } = Color.Success;
    [Parameter]
    public Color ColorForFalse { get; set; } = Color.Error;
}