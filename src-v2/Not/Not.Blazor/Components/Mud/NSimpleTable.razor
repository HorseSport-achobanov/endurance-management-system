
@namespace Not.Blazor.Components
@inherits MudSimpleTable
@typeparam T where T : class

<MudSimpleTable Style="overflow-x: auto;">
    <thead>
        <tr>
            @foreach (var heading in Headings)
            {
                <th>@heading</th>
            }
        </tr>
    </thead>
    <tbody>
        @if(Items.Count() == 0)
        {
            <MudText Typo="Typo.body1">@EmptyMessage</MudText>
        }
        @foreach (var item in Items)
        {
            var itemToString = item.ToString();
            GuardHelper.ThrowIfDefault(itemToString);
            <tr>
                @foreach (var cellValue in itemToString.Split("|"))
                {
                    <td>@cellValue</td>
                }
                @if (CustomCell != default)
                {
                    <td>
                        @CustomCell.Invoke(item)
                    </td>
                }                   
            </tr>
        }
    </tbody>
</MudSimpleTable>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<T> Items { get; set; } = new List<T>();
    [Parameter, EditorRequired]
    public string[] Headings { get; set; } = default!;
    [Parameter]
    public string EmptyMessage { get; set; } = "This table is still empty";
    [Parameter]
    public RenderFragment<T>  CustomCell { get; set; } = default!;
}
