@using Microsoft.AspNetCore.Components.Rendering

@namespace Not.Blazor.Components
@inherits MudText

<MudText Align="Align.Center" Typo="Typo" Color="Color" Class="@Class" Style="@(Style + _absoluteCenterStyle)" >
    @Localizer.Get(Content)
</MudText>

@* position:absolute removes the element from the natural stack thus a second identical element issed to preserve vertical layout *@
@if (IsAbsoluteCenter) 
{
    <MudText Align="Align.Center" Typo="Typo" Color="Color" Class="Class" Style="@(Style + "visibility:hidden")">
        @Localizer.Get(Content)
    </MudText>
}

@code {
    string _absoluteCenterStyle => IsAbsoluteCenter
        ? "position: absolute; left: 0; width: 100%"
        : "";

    [Inject]
    ILocalizer Localizer { get; set; } = default!;

    [Parameter, EditorRequired]
    public string Content { get; set; } = default!;
    [Parameter]
    public bool IsAbsoluteCenter { get; set; }
}
