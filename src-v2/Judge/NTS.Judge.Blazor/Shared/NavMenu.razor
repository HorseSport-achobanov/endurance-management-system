        <NNavLink Endpoint="@ENDURANCE_EVENT_PAGE" Text="Endurance Event" Match="NavLinkMatch.All" />
        <NNavLink Endpoint="@ATHLETES_HORSES_PAGE" Text="Athletes & Horses" />
        <NNavLink Endpoint="@COMBINATIONS_PAGE" Text="Combinations" />
