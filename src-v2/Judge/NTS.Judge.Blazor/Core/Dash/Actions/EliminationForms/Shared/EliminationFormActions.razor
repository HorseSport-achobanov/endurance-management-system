
<MudStack Row="true" Class="mt-4" Justify="Justify.FlexEnd">
    @if (Form.IsEliminated)
    {
        <NButtonSecondary Text="Update" OnClick="Form.Eliminate" StartIcon="@Icons.Material.Outlined.Cancel" />
    }
    else
    {
        <NButtonDanger Text="Eliminate" OnClick="Form.Eliminate" StartIcon="@Icons.Material.Outlined.Cancel" />
    }
    
    <NButtonPrimary Text="Restore" OnClick="Form.Restore" Disabled="!Form.IsEliminated" StartIcon="@Icons.Material.Outlined.SettingsBackupRestore" />
</MudStack>

@code {
    [Parameter, EditorRequired]
    public EliminationForm Form { get; set; } = default!;
}
