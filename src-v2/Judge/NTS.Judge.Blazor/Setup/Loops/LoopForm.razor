@using NTS.Domain.Setup.Entities
@using Not.Blazor.CRUD.Forms.Components

@inherits NForm<LoopFormModel>

<EditForm Model="Model">
    <MudNumericField @ref="_distanceField" @bind-Value="Model.Distance" Label="Loop" />
</EditForm>

@code {
    MudNumericField<double> _distanceField = default!;

    public override void RegisterValidationInjectors()
    {
        RegisterInjector(nameof(Loop.Distance), () => _distanceField);
    }
}
