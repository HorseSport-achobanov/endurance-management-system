@using NTS.Domain.Setup.Entities;
@using Not.Services;

@inherits NotComponent

<NotH2>@Localizer.Get("Officials")</NotH2>

<MudTable Items="_parentBehind.Children" Hover="true">
    <HeaderContent>
        <MudTh>Official</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd>@context</MudTd>
        
        <MudTd>
            <NotButtonDelete OnClick="() => _parentBehind.Delete(context)" />

            <NotButtonUpdate OnClick="() => this._officialNavigator.Update(OFFICIAL_PAGE, context)" />
        </MudTd>
    </RowTemplate>
        
</MudTable>

<NotButtonCreate OnClick="_officialNavigator.Create" />

@code {
    [Inject]
    private INotBehindParent<Official> _parentBehind { get; set; } = default!;
    [Inject]
    private IFormNavigator<Official, OfficialForm> _officialNavigator { get; set; } = default!;
}