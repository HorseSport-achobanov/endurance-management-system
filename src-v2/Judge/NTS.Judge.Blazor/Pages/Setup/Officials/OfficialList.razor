@using NTS.Domain.Setup.Entities;
@using Not.Services;

@inherits NotComponent

<NotH2>@Localizer.Get("Officials")</NotH2>

<MudTable Items="_parentBehind.Children" Hover="true">
    <HeaderContent>
        <MudTh>Staff</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Staff">@context</MudTd>
        <MudTd DataLabel="Actions">
            <NotButtonDelete OnClick="() => _parentBehind.Delete(context)" />

            <NotButtonUpdate OnClick="() => this._officialNavigator.Update(OFFICIAL_PAGE, context)" />

            <MudButton Variant="Variant.Outlined" IconSize="Size.Small" 
                        StartIcon="@Icons.Material.Filled.Delete"
                        Color="Color.Warning"
                        OnClick="() => _parentBehind.Delete(context)">
                @Localizer.Get("Remove")
            </MudButton>

            <MudButton Variant="Variant.Filled"
                        IconSize="Size.Small"
                        StartIcon="@Icons.Material.Filled.Update"
                        Color="Color.Primary" 
                        OnClick="() => this._officialNavigator.Update(OFFICIAL_PAGE, context)">
                @Localizer.Get("Update")
            </MudButton>
        </MudTd>
    </RowTemplate>
        
</MudTable>

<NotButtonCreate OnClick="_officialNavigator.Create" />

@code {
    [Inject]
    private INotBehindParent<Official> _parentBehind { get; set; } = default!;
    [Inject]
    private IFormNavigator<Official, OfficialForm> _officialNavigator { get; set; } = default!;
}