@using NTS.Domain.Setup.Entities;
@using NTS.Judge.Setup.Competitions
@using Not.Blazor.Forms;
@using Not.Blazor.TM.Forms;
@using Not.Blazor.TM.Forms.Components;

@inherits FormTM<LoopFormModel>;

<EditForm Model="Model">
    <MudNumericField @bind-Value="Model.Distance" Label="Loop" />
</EditForm>

@code {
    MudNumericField<double> _distanceField = default!;

    public override void RegisterValidationInjectors()
    {
        RegisterInjector(nameof(Model.Distance), () => _distanceField);
    }
}