@using NTS.Domain.Setup.Entities;
@using Not.Blazor.Components;
@using Not.Blazor.Navigation;
@using Not.Blazor.TM.Forms.Components

@attribute [Route(LOOP_UPDATE)]
@inherits NotComponent

<MudPaper Elevation="0">
    <NotH2>@Localizer.Get("Edit Loop")</NotH2>
    <NotFormUpdate T="Phase" TForm="LoopForm" Entity="_navigator.ConsumeParameter<Phase>()" UpdateAction="Update" />
</MudPaper>

@code {
    private Phase _loop { get; set; } = default!;
    [Inject]
    private INotBehindParent<Phase> _parentBehind { get; set; } = default!;
    [Inject]
    private INavigator _navigator { get; set; } = default!;

    protected async Task Update(Phase loop)
    {
        await _parentBehind.Update(loop);
        _navigator.NavigateTo(SETUP_PAGE);
    }
}