@using NTS.Domain.Setup.Entities
@using NTS.Judge.Setup.Competitions
@using Not.Blazor.CRUD.Forms.Components

@inherits NForm<HorseFormModel>;

<EditForm Model="Model">
    <MudTextField @ref="_nameField" @bind-Value="Model.Name" Label="Horse Name" Variant="Variant.Text" Margin="Margin.Dense" />

    <MudTextField @ref="_feiIdField" @bind-Value="Model.FeiId" Label="Fei Id" HelperText="@Localizer.Get(OPTIONAL_FEI_ID)"
        Variant="Variant.Text" Margin="Margin.Dense" />
</EditForm>

@code {
    private MudTextField<string?> _feiIdField = default!;
    private MudTextField<string?> _nameField = default!;

    public override void RegisterValidationInjectors()
    {
        RegisterInjector(nameof(Horse.FeiId), () => _feiIdField);
        RegisterInjector(nameof(Horse.Name), () => _nameField);
    }
}
