@using Not.Services;
@using Not.Blazor.Components;
@using Not.Blazor.Forms;
@using Not.Blazor.Navigation;

@inherits NotComponent
@typeparam T where T : DomainEntity;
@typeparam TForm where TForm : NotForm<T>;

<MudCard>
    <NotDynamic T="TForm" @ref="_notUpdate" />
</MudCard>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Update">
    @Localizer.Get("Update")
</MudButton>

@code {
    private NotDynamic<TForm>? _notUpdate;

    [Parameter]
    public T Entity { get; set; } = default!;
    [Parameter]
    public Func<T, Task> UpdateAction { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        // Needs to wait untill ref is evaluated. Also this makes it necessary to trigger a manual rerender of TForm
        while (_notUpdate == null)
        {
            await Task.Delay(TimeSpan.FromMilliseconds(10));
        }
        _notUpdate!.Instance.SetUpdateModel(Entity);
        _notUpdate!.Instance.TriggerRender();
    }

    protected async Task Update()
    {
        try
        {
            var entity = _notUpdate!.Instance.SubmitUpdate();
            await UpdateAction(entity);
        }
        catch (DomainException domainException)
        {
            await _notUpdate!.Instance.AddValidationError(domainException.Property, domainException.Message);
        }
    }
}
