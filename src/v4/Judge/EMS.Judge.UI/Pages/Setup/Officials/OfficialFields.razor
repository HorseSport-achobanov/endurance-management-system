@using EMS.Domain.Setup.Entities;
@using EMS.Judge.Setup.Officials;
@using Not.Blazor.Forms;
@inherits FormContent;

<MudCardContent>
    <MudTextField Label="Place" @bind-Value="_model.Name" For="@(() => _model.Name)" />
</MudCardContent>

<MudCardContent>
    <MudSelect Label="Role" @bind-Value="_model.Role">
        @foreach (var item in Enum.GetValues<OfficialRole>())
        {
            <MudSelectItem Value="@item">@item</MudSelectItem>
        }
    </MudSelect>
</MudCardContent>

@code {
    private IOfficialFields _model => (IOfficialFields)Model;
}
