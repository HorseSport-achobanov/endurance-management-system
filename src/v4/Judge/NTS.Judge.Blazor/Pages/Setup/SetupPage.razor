@using EMS.Domain.Setup.Entities;
@using NTS.Judge.Blazor.Pages.Setup.Events;
@using Not.Blazor.Components;
@using Not.Blazor.Forms

@attribute [Route(SETUP_PAGE)]
@inherits NotComponent

<MudText Typo="Typo.h4">
    @Localizer.Get("Setup")
</MudText>

@if (_event == null)
{
    <MudPaper>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="RenderCreate">
            @Localizer.Get("Create")
        </MudButton>
    </MudPaper>
}
else
{
    <EventPage />
}

@code {
    private Event? _event;
    [Inject]
    private IFormNavigator<Event, EventFields> _formNavigator { get; set; } = default!;
    [Inject]
    private INotBehind<Event> _behind { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await Init();
    }

    private async Task Init()
    {
        _event = await _behind.Read(default);
    }

    private async Task RenderCreate()
    {
        await _formNavigator.Create();
        await Init();
    }
}