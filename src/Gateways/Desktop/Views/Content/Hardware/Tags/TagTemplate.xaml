<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localization="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization"
                    xmlns:tags="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Hardware.Tags">

    <DataTemplate DataType="{x:Type tags:TagViewModel}">
        <StackPanel Style="{StaticResource List-Horizontal}">
            <Border Style="{StaticResource Border-Cell}" Padding="10px 5px">
                <TextBlock Text="{Binding DetectedCount}" FontSize="16" />
            </Border>
            <TextBlock Text="{Binding Id}" FontSize="16" Padding="10px 0 0 0" />
        </StackPanel>
    </DataTemplate> 
</ResourceDictionary>
