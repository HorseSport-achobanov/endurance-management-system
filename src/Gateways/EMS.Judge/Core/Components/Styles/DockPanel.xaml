<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Strip" TargetType="DockPanel">
        <Setter Property="LastChildFill" Value="True" />
    </Style>

    <Style x:Key="Strip-Vertical" TargetType="DockPanel" BasedOn="{StaticResource Strip}">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="Stretch-Last" TargetType="DockPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="Dock-Horizontal" TargetType="DockPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="Dock-Error" TargetType="DockPanel">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
