<ItemsControl x:Class="EnduranceJudge.Gateways.Desktop.Controls.Ranking.RanklistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ranking="clr-namespace:EnduranceJudge.Gateways.Desktop.Controls.Ranking"
             ItemsSource="{Binding Participations}">

    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <StackPanel Style="{StaticResource List-Vertical}"  />
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <ranking:ParticipationResultControl Participation="{Binding}" />
        </DataTemplate>
    </ItemsControl.ItemTemplate>
    
</ItemsControl>
