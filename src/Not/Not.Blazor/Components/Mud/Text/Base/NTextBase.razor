@using Microsoft.AspNetCore.Components.Rendering

@namespace Not.Blazor.Components
@inherits MudText

<MudText Align="Align.Center" Typo="Typo" Color="Color" Class="@Class" Style="@(Style + AbsoluteCenterStyle)" >
    @Localizer.Get(Content)
</MudText>

@* position:absolute removes the element from the natural stack thus a second identical element issed to preserve vertical layout *@
@if (IsAbsoluteCenter) 
{
    <MudText Align="Align.Center" Typo="Typo" Color="Color" Class="Class" Style="@(Style + "visibility:hidden")">
        @Localizer.Get(Content)
    </MudText>
}
