@using Not.Blazor.CRUD.Ports
@using Not.Blazor.Components
@using Not.Blazor.Navigation
@using Not.Blazor.CRUD.Forms.Components
@using Not.Safe

@inherits NComponent
@typeparam T
@typeparam TForm where TForm : NForm<T>

<MudContainer Class="not-page-mid-width">
    <NDynamic @ref="_form" T="T" TForm="TForm" Model="Model" />
    
    <MudStack Row="true" Class="mt-4">
        <NButtonUpdate OnClick="Update" />

        @if (Navigator.CanNavigateBack())

        {
            <NButtonBack OnClick="NavigateBack" />
        }
    </MudStack>
</MudContainer>
