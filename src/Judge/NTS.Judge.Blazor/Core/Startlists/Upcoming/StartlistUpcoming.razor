@using NTS.Domain.Core.Objects
@using System.Collections
@using NTS.Domain.Core.Objects.Startlists
@using Not.Extensions

@inherits StartlistTabs

@if (Behind.Upcoming.Count() != 0)
{
    <MudTabs PanelClass="px-4 py-6" Elevation="0" Rounded ApplyEffectsToContainer Class="@Class">
        @foreach (var tabHeader in StartlistsByStage.Keys)
        {
            <MudTabPanel Text="@tabHeader">
                <NSimpleTable T="StartlistEntry" Headings="@TableHeaders" Items="StartlistsByStage[tabHeader]">
                    <CustomCell>
                        <StartlistTimer StartTime="@context.Time" StopTimerAtTime="-15" />
                    </CustomCell>
                </NSimpleTable>
            </MudTabPanel>
        }
    </MudTabs>
}
