<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Content-Right" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="1.7*"></Setter>
    </Style>

    <Style x:Key="Content-Left" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="1.7*"></Setter>
    </Style>

    <Style x:Key="Content-Center" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="8*" />
    </Style>

    <Style x:Key="Layout-Left" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="30px" />
    </Style>

    <Style x:Key="Layout-Main" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="10.3*"></Setter>
    </Style>

    <Style x:Key="Layout-Right" TargetType="ColumnDefinition">
        <Setter Property="Width" Value="1.7*"></Setter>
    </Style>

</ResourceDictionary>
