<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Core.Domain.State.Participants;assembly=Core.Domain"
                    xmlns:content="clr-namespace:EMS.Judge.Common.Components">

    <DataTemplate DataType="{x:Type local:RfidTag}">
        <StackPanel Style="{StaticResource List-Horizontal}">
            <TextBlock Style="{StaticResource Text}">
                <Run Text="Tag: " />
                <Run Style="{StaticResource Run-Bold}" Text="{Binding Id}" />
            </TextBlock>
            <TextBlock Style="{StaticResource Text}">
                <Run Text="Position: " />
                <Run Style="{StaticResource Run-Bold}" Text="{Binding Position}" />
            </TextBlock>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
